<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping
    xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Ekyna\Bundle\CoreBundle\Entity\AbstractFile">
        <constraint name="Ekyna\Bundle\CoreBundle\Validator\Constraints\AbstractFile" />
        <property name="file">
            <constraint name="File" />
        </property>
    </class>

    <class name="Ekyna\Bundle\CoreBundle\Entity\AbstractImage">
        <constraint name="Ekyna\Bundle\CoreBundle\Validator\Constraints\AbstractFile" />
        <constraint name="Ekyna\Bundle\CoreBundle\Validator\Constraints\AbstractImage" />
        <property name="file">
            <constraint name="Image">
                <option name="maxSize">2M</option>
                <option name="mimeTypes">
                    <value>image/gif</value>
                    <value>image/jpeg</value>
                    <value>image/png</value>
                </option>
                <option name="mimeTypesMessage">ekyna_core.image.invalid_mime_type</option>
            </constraint>
        </property>
    </class>

    <class name="Ekyna\Bundle\CoreBundle\Entity\AbstractGalleryImage">
        <constraint name="Ekyna\Bundle\CoreBundle\Validator\Constraints\AbstractGalleryImage" />
        <property name="position">
            <constraint name="NotNull" />
            <constraint name="GreaterThanOrEqual">
	            <option name="value">0</option>
	        </constraint>
        </property>
    </class>

</constraint-mapping>