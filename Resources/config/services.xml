<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="ekyna_core.doctrine.entity_listener_resolver.class">Ekyna\Bundle\CoreBundle\Doctrine\EntityListenerResolver</parameter>

        <parameter key="ekyna_core.chain_router.class">Symfony\Cmf\Component\Routing\ChainRouter</parameter>

        <parameter key="ekyna_core.kernel_event_subscriber.class">Ekyna\Bundle\CoreBundle\EventListener\KernelEventSubscriber</parameter>

        <parameter key="ekyna_core.image_uploader.class">Ekyna\Bundle\CoreBundle\Uploader\ImageUploader</parameter>
        <parameter key="ekyna_core.image_subscriber.class">Ekyna\Bundle\CoreBundle\Listener\ImageSubscriber</parameter>
        <parameter key="ekyna_core.image_event_subscriber.class">Ekyna\Bundle\CoreBundle\EventListener\ImageEventSubscriber</parameter>
        <parameter key="ekyna_core.image.form_type.class">Ekyna\Bundle\CoreBundle\Form\Type\ImageType</parameter>
        <parameter key="ekyna_core.gallery_image.form_type.class">Ekyna\Bundle\CoreBundle\Form\Type\GalleryImageType</parameter>

        <parameter key="ekyna_core.entity_search.form_type.class">Ekyna\Bundle\CoreBundle\Form\Type\EntitySearchType</parameter>

        <parameter key="ekyna_core.form_type_sizing_extension.class">Ekyna\Bundle\CoreBundle\Form\Extension\FormTypeSizingExtension</parameter>
        <parameter key="ekyna_core.form_type_redirect_extension.class">Ekyna\Bundle\CoreBundle\Form\Extension\FormTypeRedirectExtension</parameter>
        <parameter key="ekyna_core.form_type_footer_extension.class">Ekyna\Bundle\CoreBundle\Form\Extension\FormTypeFooterExtension</parameter>
        <parameter key="ekyna_core.entity_type_extension.class">Ekyna\Bundle\CoreBundle\Form\Extension\EntityTypeExtension</parameter>
        <parameter key="ekyna_core.datetime_type_extension.class">Ekyna\Bundle\CoreBundle\Form\Extension\DatetimeTypeExtension</parameter>

        <parameter key="ekyna_core.twig.ui_extension.template">EkynaCoreBundle:Ui:controls.html.twig</parameter>
    </parameters>

    <services>
        <!-- Doctrine entity listener resolver -->
        <service id="ekyna_core.doctrine.entity_listener_resolver" class="%ekyna_core.doctrine.entity_listener_resolver.class%">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <!-- Chain router -->
        <service id="ekyna_core.router" class="%ekyna_core.chain_router.class%">
            <argument type="service" id="logger" on-invalid="ignore" />
            <call method="setContext">
                <argument type="service" id="router.request_context" />
            </call>
        </service>

        <!-- Redirect Exception listener -->
        <service id="ekyna_core.kernel_event_subscriber" class="%ekyna_core.kernel_event_subscriber.class%">
            <argument type="service" id="session" />
            <tag name="kernel.event_subscriber" />
        </service>

        <!-- Image uploader -->
        <service id="ekyna_core.image_uploader" class="%ekyna_core.image_uploader.class%">
            <argument type="service">
                <service 
                    class="Gaufrette\Filesystem"
                    factory-service="knp_gaufrette.filesystem_map"
                    factory-method="get"
                >
                    <argument>ekyna_image</argument>
                </service>
            </argument>
        </service>
        <service id="ekyna_core.image_event_subscriber" class="%ekyna_core.image_event_subscriber.class%">
            <argument type="service" id="ekyna_core.image_uploader" />
        	<tag name="kernel.event_subscriber" />
        </service>
        <service id="ekyna_core.image_subscriber" class="%ekyna_core.image_subscriber.class%">
            <argument type="service" id="ekyna_core.image_uploader" />
            <tag name="doctrine.event_subscriber" connection="default" />
        </service>

        <!-- Form types -->
        <service id="ekyna_core.image.form_type" class="%ekyna_core.image.form_type.class%">
            <tag name="form.type" alias="ekyna_core_image" />
        </service>
        <service id="ekyna_core.gallery_image.form_type" class="%ekyna_core.gallery_image.form_type.class%">
            <tag name="form.type" alias="ekyna_core_gallery_image" />
        </service>
        <service id="ekyna_core.entity_search.form_type" class="%ekyna_core.entity_search.form_type.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="form.type" alias="ekyna_core_entity_search" />
        </service>

        <!-- Form Extensions -->
        <service id="ekyna_core.form_type_sizing_extension" class="%ekyna_core.form_type_sizing_extension.class%">
            <tag name="form.type_extension" alias="form" />
        </service>
        <service id="ekyna_core.form_type_redirect_extension" class="%ekyna_core.form_type_redirect_extension.class%">
            <argument type="service" id="request_stack" />
            <tag name="form.type_extension" alias="form" />
        </service>
        <service id="ekyna_core.form_type_footer_extension" class="%ekyna_core.form_type_footer_extension.class%">
            <tag name="form.type_extension" alias="form" />
        </service>
        <service id="ekyna_core.entity_type_extension" class="%ekyna_core.entity_type_extension.class%">
            <tag name="form.type_extension" alias="entity" />
        </service>
        <service id="ekyna_core.datetime_type_extension" class="%ekyna_core.datetime_type_extension.class%">
            <tag name="form.type_extension" alias="datetime" />
        </service>

        <!-- Twig extensions -->
        <service id="ekyna_core.twig.utils_extension" class="Ekyna\Bundle\CoreBundle\Twig\UtilsExtension">
            <tag name="twig.extension" />
        </service>
        <service id="ekyna_core.twig.ui_extension" class="Ekyna\Bundle\CoreBundle\Twig\UiExtension">
            <argument>%ekyna_core.twig.ui_extension.template%</argument>
            <tag name="twig.extension" />
        </service>
        <service id="twig.extension.text" class="Twig_Extensions_Extension_Text">
            <tag name="twig.extension" />
        </service>
        <service id="twig.extension.intl" class="Twig_Extensions_Extension_Intl">
            <tag name="twig.extension" />
        </service>
    </services>

</container>